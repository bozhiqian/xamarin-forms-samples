<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:views="clr-namespace:WorkingWithPopups.Views;assembly=WorkingWithPopups"
            x:Class="WorkingWithPopups.Views.MainPage"
            Title="{Binding Title}"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:vm="clr-namespace:WorkingWithPopups.ViewModels;assembly=WorkingWithPopups"
            mc:Ignorable="d"
            d:DataContext="{d:DesignInstance Type=vm:MainPageViewModel,IsDesignTimeCreatable=True}">

    <TabbedPage.Children>
        <views:AlertPage Title="Alerts" Icon="csharp.png" />
        <views:ActionSheetPage Title="ActionSheets" Icon="csharp.png" />
    </TabbedPage.Children>

</TabbedPage>